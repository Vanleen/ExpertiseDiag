# public/.htaccess

# — URL rewriting pour fichiers Astro / index.html implicites —
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Laisse passer les fichiers & dossiers existants
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Sert /chemin/index.html quand on appelle /chemin/
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.+)/$ $1/index.html [L]

  # Fallback (404 côté fichiers) -> index.html racine
  RewriteRule ^ index.html [L]
</IfModule>

# — Caching léger des assets —
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/avif "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType font/woff2 "access plus 30 days"
</IfModule>

# — Gzip (si dispo) —
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# Types utiles
AddType application/wasm .wasm
