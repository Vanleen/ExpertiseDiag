---
import DiagServicePage from "../components/DiagServicePage.astro";

const pageTitle = "Mesurage Loi Carrez — Surface privative | Expertise Diag";
const description = "Loi Carrez : surface privative des lots de copropriété (vente). Mesurage certifié. Intervention rapide en Île-de-France et alentours (89, 45, 28).";
---
<DiagServicePage
  idBase="carrez"
  pageTitle={pageTitle}
  description={description}
  stickyTitle="Mesurage Loi Carrez"
  breadcrumbFull="Mesurage Loi Carrez — Surface privative (vente)"
  imgSrc="/img/diagnostics/carrez.svg"
  imgAlt="Icône Mesurage Loi Carrez"
  tags={["Copropriété","Vente obligatoire","Mesurage certifié"]}
  jsonLdName="Mesurage Loi Carrez"
>
  <div slot="cardIntro">
    Mesure la <strong>surface privative</strong> des lots de copropriété pour les ventes (obligatoire).
  </div>

  <h2 class="text-2xl md:text-3xl font-bold text-[#11114E]">Objectif</h2>
  <p class="mt-3 text-gray-700 max-w-3xl">Sécuriser la transaction et éviter les litiges sur la surface du lot.</p>

  <h3 class="mt-8 text-xl md:text-2xl font-semibold text-[#11114E]">Périmètre</h3>
  <p class="mt-2 text-gray-700 max-w-3xl">Exclut certaines surfaces (cloisons, caves, garages…) selon les règles <strong>Carrez</strong>.</p>
</DiagServicePage>